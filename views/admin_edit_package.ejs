<%- include('partials/header', { title: 'Edit Paket' }) %>

<h1 class="mb-4">Edit Paket: <%= package.name %></h1>

<div class="card">
    <div class="card-body">
        <form action="/admin/packages/edit/<%= package.id %>" method="POST">
            <div class="mb-3">
                <label for="category" class="form-label">Kategori</label>
                <input type="text" class="form-control" id="category" name="category" value="<%= package.category %>" required>
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Nama Paket</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= package.name %>" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Harga (hanya angka)</label>
                <input type="number" class="form-control" id="price" name="price" value="<%= package.price %>" required>
            </div>
            <div class="mb-3">
                <label for="features" class="form-label">Fitur (pisahkan dengan koma)</label>
                <textarea class="form-control" id="features" name="features" rows="4" required><%= package.features %></textarea>
            </div>
            <div class="mb-3">
                <label for="whatsapp_message" class="form-label">Pesan WhatsApp Template</label>
                <input type="text" class="form-control" id="whatsapp_message" name="whatsapp_message" value="<%= package.whatsapp_message %>" required>
            </div>
            <button type="submit" class="btn btn-primary">Update Paket</button>
            <a href="/admin/dashboard" class="btn btn-secondary">Batal</a>
        </form>
    </div>
</div>

<%- include('partials/footer') %>
