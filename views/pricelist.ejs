<%- include('partials/header', { title: title }) %>

<div class="text-center mb-16" data-aos="fade-down">
    <h1 class="text-5xl md:text-6xl font-bold tracking-tight font-display text-white">Pricelist</h1>
    <p class="text-lg text-brand-light/70 mt-4 max-w-2xl mx-auto">Pilih paket terbaik untuk mengabadikan momen berharga Anda, diabadikan dengan cinta dan profesionalisme.</p>
</div>

<% Object.keys(groupedPackages).forEach(category => { %>
    <div class="mb-16">
        <h2 class="text-4xl font-display font-bold text-center text-white mb-10" data-aos="fade-up"><%= category %></h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% groupedPackages[category].forEach((pkg, index) => { %>
                <div class="flex flex-col bg-slate-800/50 border border-slate-700 rounded-xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:shadow-brand-accent/20 hover:-translate-y-2" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                    <div class="p-8 text-center">
                        <h3 class="text-2xl font-bold text-white font-display"><%= pkg.name %></h3>
                        <p class="text-center text-5xl font-bold my-5 text-brand-accent">
                            <span class="text-3xl align-top text-brand-accent/70">Rp</span><%= (pkg.price / 1000).toLocaleString('id-ID') %><span class="text-2xl text-brand-accent/70">K</span>
                        </p>
                    </div>
                    <div class="p-8 pt-0 flex-grow">
                        <ul class="space-y-4 text-brand-light/90">
                            <% pkg.features.split(',').forEach(feature => { %>
                                <li class="flex items-start">
                                    <i class="bi bi-check-lg text-brand-accent mt-1 mr-3"></i>
                                    <span><%= feature.trim() %></span>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                    <div class="mt-auto p-6">
                        <a href="https://wa.me/62895700503193?text=<%= encodeURIComponent(pkg.whatsapp_message) %>" target="_blank" class="w-full text-center block bg-brand-accent text-white font-bold py-3 px-6 rounded-lg transition-all duration-300 hover:bg-brand-accent-hover hover:shadow-lg hover:shadow-brand-accent/40">
                            <i class="bi bi-whatsapp mr-2"></i>Pesan Sekarang
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
<% }); %>

<%- include('partials/footer') %>